---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="澁谷のポートフォリオサイト" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="calculator/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global></style>

<style>
  * {
    padding: 0;
    margin: 0;
  }
</style>
